{
    "compilerOptions": {
        "target": "esnext",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "strict": true,
        "esModuleInterop": true,
        "declaration": true,
        "rootDir": "src",
        "outDir": "dist",
        "paths": {
            "#internal/*": [
                "./emscripten/dist/*"
            ]
        },
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*"
    ],
}